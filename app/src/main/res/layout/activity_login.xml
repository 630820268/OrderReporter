<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.orderreporter.login.LoginActivity">

    <ImageView
        android:layout_width="160px"
        android:layout_height="127.7px"
        android:layout_marginTop="95px"
        android:layout_gravity="center"
        android:src="@drawable/logo"/>


    <RelativeLayout
        android:layout_width="380px"
        android:layout_height="50px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="83.3px">
        <TextView
            android:id="@+id/login_user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户"
            android:layout_centerVertical="true"
            android:textSize="24px"
            android:textColor="@color/login_tv"/>
        <EditText
            android:id="@+id/login_user_et"
            android:layout_toRightOf="@id/login_user_tv"
            android:layout_marginLeft="30px"
            android:textSize="24px"
            android:hint="请输入用户名"
            android:textColor="@color/login_tv"
            android:singleLine="true"
            android:textColorHint="@color/login_et_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="@color/login_view"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="380px"
        android:layout_height="50px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10px">
        <TextView
            android:id="@+id/login_psw_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:layout_centerVertical="true"
            android:textSize="24px"
            android:textColor="@color/login_tv"/>
        <EditText
            android:id="@+id/login_psw_et"
            android:layout_toRightOf="@id/login_psw_tv"
            android:layout_marginLeft="30px"
            android:textSize="24px"
            android:hint="请输入密码"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/login_tv"
            android:textColorHint="@color/login_et_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="@color/login_view"/>

    </RelativeLayout>
    
    <TextView
        android:id="@+id/login_login_tv"
        android:layout_width="380px"
        android:layout_height="70px"
        android:text="登录"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="24px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="88px"
        android:background="@drawable/shape_gather_bill_bg"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/login_view"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="168px"
        android:text="版权所有@闪捷支付"/>

</LinearLayout>
