<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.orderreporter.pay.SuccessActivity">

    <include layout="@layout/view_title"/>

    <ImageView
        android:layout_width="144px"
        android:layout_height="144px"
        android:src="@drawable/err_icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180px"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pay_top"
        android:layout_marginTop="40px"
        android:layout_gravity="center_horizontal"
        android:text="收款失败"/>

    <TextView
        android:id="@+id/err_sure_tv"
        android:layout_width="380px"
        android:layout_height="80px"
        android:text="确定"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60px"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="24px"
        android:background="@drawable/shape_login_btn_bg"
        />
    <TextView
        android:id="@+id/err_query_tv"
        android:layout_width="380px"
        android:layout_height="80px"
        android:text="查账"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:textColor="@color/login_btn_bg"
        android:gravity="center"
        android:textSize="24px"
        android:background="@drawable/shape_success_query_bg"
        />

</LinearLayout>
