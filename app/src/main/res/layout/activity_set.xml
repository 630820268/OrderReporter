<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.orderreporter.gather.SetActivity">

    <include layout="@layout/view_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@android:color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:layout_marginLeft="40px"
                android:layout_centerVertical="true"
                android:textColor="@color/login_tv"
                android:text="语音播报"/>

        <ImageView
            android:id="@+id/set_voice_iv"
            android:layout_width="100px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:src="@drawable/set_btn_on"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginTop="1px"
        android:background="@android:color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24px"
            android:layout_marginLeft="40px"
            android:layout_centerVertical="true"
            android:textColor="@color/login_tv"
            android:text="小票打印"/>

        <ImageView
            android:id="@+id/set_print_iv"
            android:layout_width="100px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:src="@drawable/set_btn_on"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set_quit_rela"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_marginTop="1px"
        android:layout_height="80px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24px"
            android:textColor="@color/login_tv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:text="退出登录"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/set_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gather_set"
                android:textSize="24px"
                android:text="收银员001"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:textSize="30px"
                android:textColor="@color/gather_set"
                android:text=">"/>
        </LinearLayout>
    </RelativeLayout>
    
    <!--<TextView-->
        <!--android:layout_width="380px"-->
        <!--android:layout_height="50px"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:textColor=""-->
        <!--android:background="@color/login_btn_bg"/>-->

</LinearLayout>
